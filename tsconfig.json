{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "target": "es2021",
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "moduleResolution": "Node",
    "removeComments": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": false, // 差分のみコンパイル
    "outDir": "dist",
    "baseUrl": "src",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    }
  },
  // コンパイル対象ファイルのpath
  "include": ["src/**/*"]
}
